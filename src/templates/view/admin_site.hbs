<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>{{title}}</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">


</head>

<body>

  <nav class="navbar navbar-expand-md navbar-dark bg-dark static">

    <div class="row offset-5">
      <a class="navbar-brand" href="/"><button><img style="height: 50px; width: 50px;" src="/images/home.jpg"></button></a>
    </div>
    
    <div class="row offset-5 btn" style="padding-top: 4px; padding-bottom: 10px; ">
      <a style=" text-decoration: none; " href="/adding"><h4>+add</h4><h7>book </h7></a><span class="text-muted"></span>
    </div>
  </nav>


  <!-- Page Content -->
  <div style="padding-top: 10px;" class="container">

    <div class="row">
      <div class="col-lg-9">

        <div class="row">
          
            {{#book1}}
               <div class="col-lg-4 col-md-6 mb-4">
                  <div class="card h-60">
                     <div style="padding-bottom: 0px" class="card-body">
                        <img style="height: 200px;" class="card-img-top" src="/images/book-img/{{this.buk}}" alt="img">
                        <h9 style="padding-top: 10px;" class="card-title">
                        {{this.title}}</h9>
                        <br><h9>Author: {{this.author}}
                        </h9>
                     </div>
                     <div class="card-footer text-center" >
                        <button class="btn btn-sm float-left btn-warning"><a style="text-decoration: none; " href="#"><span>&#9998;</span></a></button>
                        <form class="form float-right" action="/removebook" method="POST">
                          <input type="hidden" name="_Id" value="{{this._id}}" />
                          <button class="btn btn-sm btn btn-danger" type="submit"><span class="close">&#10005;</span></button>
                        </form>
                     </div>
                  </div>
               </div>
         {{/book1}}
         
        </div>
        <!-- /.row -->
        

        
      </div>
      <!-- /.col-lg-9 -->
     
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-9">
        <h3>Users Request Book</h3>
        {{#users}}
          <ul style="list-style-type:none; font-family:sans-serif;">
            <li>Title: {{this.title}}<br> Author: {{this.author}}</li>
          </ul>
        {{/users}}
      </div>
    </div>
  </div>
  <!-- /.container -->

 <!-- Footer -->
  <footer class="py-5 bg-dark static">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="/jquery/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>

</body>
</html>
